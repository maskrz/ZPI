<form class="form-horizontal" role="form">
	<div class="form-group">
		<label for="first-name" class="col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-2 col-sm-offset-1 control-label">Imię</label>
		<div class="col-lg-4 col-md-4 col-sm-5">
			<input type="email" class="form-control" id="first-name" placeholder="Imię">
		</div>
	</div>
	<div class="form-group">
		<label for="last-name" class="col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-2 col-sm-offset-1 control-label">Nazwisko</label>
		<div class="col-lg-4 col-md-4 col-sm-5">
			<input type="email" class="form-control" id="last-name" placeholder="Nazwisko">
		</div>
	</div>
	<div class="form-group">
		<label for="email" class="col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-2 col-sm-offset-1 control-label">Email</label>
		<div class="col-lg-4 col-md-4 col-sm-5">
			<input type="email" class="form-control" id="email" placeholder="Email">
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-2 col-sm-offset-1 control-label">Hasło</label>
		<div class="col-lg-4 col-md-4 col-sm-5">
			<input type="password" class="form-control" id="password" placeholder="Hasło">
		</div>
	</div>
	<div class="form-group">
		<label for="password-repeat" class="col-lg-2 col-lg-offset-3 col-md-2 col-md-offset-3 col-sm-3 control-label">Powtórz hasło</label>
		<div class="col-lg-4 col-md-4 col-sm-5">
			<input type="password" class="form-control" id="password-repeat" placeholder="Powtórz hasło">
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-5 col-lg-7 col-md-7 col-md-offset-5 col-sm-9 col-sm-offset-3">
			<div class="checkbox">
				<label>
					<input type="checkbox" name = "acceptStatute">
					akceptuję <a data-toggle="modal" href="#statute">regulamin</a> GPW Analizer </label>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-5 col-lg-4 col-md-offset-5 col-md-5 col-sm-9 col-sm-offset-3">
			<button type="submit" class="btn btn-green col-lg-12 col-md-9 col-sm-6">
				Zarejestruj się
			</button>
		</div>
	</div>

	<div class="modal fade" id="statute" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<%= render "partials/statute_modal" %>
	</div><!-- /.modal -->

</form>