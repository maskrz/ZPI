<form class="form-horizontal" role="form" >
  <div class="form-group">
    <label for="first-name" class="col-lg-2 col-md-2 col-sm-2 control-label">Imię</label>
    <div class="col-lg-4 col-md-4 col-sm-5">
      <input type="text" class="form-control" id="first-name" placeholder="Imię">
    </div>
  </div>
  <div class="form-group">
    <label for="last-name" class="col-lg-2 col-md-2 col-sm-2 control-label">Nazwisko</label>
    <div class="col-lg-4 col-md-4 col-sm-5">
      <input type="text" class="form-control" id="last-name" placeholder="Nazwisko">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-lg-2 col-md-2 col-sm-2 control-label">Adres e-mail</label>
    <div class="col-lg-4 col-md-4 col-sm-5">
      <input type="email" class="form-control" id="email" placeholder="Email">
    </div>
  </div>
  <div class="form-group">
    <label for="mail-content" class="col-lg-2 col-md-2 col-sm-2 control-label">Treść wiadomości</label>
    <div class="col-lg-10 col-md-10 col-sm-9">
      <textarea class="form-control" rows="3" id="mail-content"></textarea>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-sm-offset-2">
      <button type="submit" class="btn btn-green">Wyślij wiadomość</button>
    </div>
  </div>
</form>