<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
				×
			</button>
			<h2 class="modal-title">Nowa wiadomość</h2>
		</div>
		<%= form_for @message, html: { :class => "form-horizontal", :role => "form" } do |f| %>
			<div class="modal-body">
				<div class="form-group">
					<%= f.label :reciver, class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.select(:reciver_id, @users, { include_blank: true }, { class: 'form-control', data: { :'live-search' => true } }) %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :content, { class: "col-sm-2 control-label" } %>
					<div class="col-sm-10">
						<%= f.text_area :content, { :class=>"form-control" } %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= f.submit "Wyślij", { :class => "btn btn-default" } %>
			</div>
		<% end %>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->